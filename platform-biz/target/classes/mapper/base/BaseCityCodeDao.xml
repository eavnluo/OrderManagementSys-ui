<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.modules.base.dao.BaseCityCodeDao">

    <sql id="selectSql">
        SELECT
        T.ID,
        T.FULL_NAME,
        T.CODE,
        T.PRIVINCE
        FROM BASE_CITY_CODE T
        WHERE 1=1
        <if test="params.name != null and params.name.trim() != ''">
            AND T.NAME LIKE '%${params.name}%'
        </if>
    </sql>

    <select id="selectBaseCityCodePage" resultType="com.platform.modules.base.entity.BaseCityCodeEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAll" resultType="com.platform.modules.base.entity.BaseCityCodeEntity">
        <include refid="selectSql"/>
    </select>
</mapper>